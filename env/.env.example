# Copy to env/.env and adjust if needed

# Container image versions
WSO2_MI_IMAGE=wso2/wso2mi:4.5.0
WSO2_ICP_IMAGE=wso2/wso2-integration-control-plane:latest
WSO2_APIM_IMAGE=wso2/wso2am:4.4.0

# Host ports
ICP_HTTPS_PORT=9743
MI_HTTP_PORT=8290
MI_HTTPS_PORT=8253
MI_MGT_PORT=9164
APIM_HTTPS_PORT=9443
APIM_HTTP_PORT=9763
APIM_GW_HTTP_PORT=8280
APIM_GW_HTTPS_PORT=8243

# Public hostname for APIM portals (Publisher/Devportal/Admin)
APIM_PUBLIC_HOST=apim.local

# UI base (used by scripts / patches)
APIM_UI_PROTOCOL=https
APIM_UI_PORT=9443

# APIM JVM options
APIM_JVM_MEM_OPTS="-Xms512m -Xmx512m"

# Feature flags
ENABLE_APIM=1

# ICP registration settings used by MI
ICP_DASHBOARD_URL=https://icp:9743/dashboard/api/
ICP_HEARTBEAT_INTERVAL=5
ICP_GROUP_ID=sandbox
MI_NODE_ID=mi-node-1
